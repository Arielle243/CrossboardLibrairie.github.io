{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Password</th>
                <th>Picture</th>
                <th>Pseudo</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Address</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>AddressDelivery</th>
                <th>PhoneNumber</th>
                <th>Statut</th>
                <th>DateRegistration</th>
                <th>Birthdate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.picture }}</td>
                <td>{{ user.pseudo }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.zipCode }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.addressDelivery }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.statut ? 'Yes' : 'No' }}</td>
                <td>{{ user.dateRegistration ? user.dateRegistration|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.birthdate ? user.birthdate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_client_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('app_client_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="17">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_client_new') }}">Create new</a>
{% endblock %}

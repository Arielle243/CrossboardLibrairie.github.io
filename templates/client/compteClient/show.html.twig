{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}

    {# <h3>Bienvenue sur votre profil  {{ user.firstname}} </h3> #}

              <div class="card-body">
                <h4 class="card-title">Mes informations</h4>
                 <p class="card-text">{{ user.picture }}</p>
                {# <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> #}
                <p class="card-text">Adresse Email: {{ user.email }}{# {{ user.password }} #}</p>
                <p class="card-text">Nom: {{ user.name }} <br> Prénom: {{ user.firstname }} <br> Pseudo: {{ user.pseudo }} <br> Né (e) le:{{ user.birthdate ? user.birthdate|date('d-m-Y') : '' }}</p>
                <p class="card-text">Adresse postal: {{ user.address }} <br> {{ user.zipCode }}<br> {{ user.city }}</p>
                <p class="card-text">Téléphone: {{ user.phoneNumber }}</p>
                <p class="card-text">Inscrit depuis le : {{ user.createdAt ? user.createdAt|date('d/m/Y H:i:s') : '' }}</p>
                <p class="card-text">Modifier le : {{ user.updatedAt ? user.updatedAt|date('d/m/Y H:i:s') : '' }}</p>
                <a href="{{ path('client_index') }}" class="card-link">Retour</a>
                <a href="{{ path('client_edit', {'id': user.id}) }}" class="card-link">Modifier mes informations</a>
                {{ include('client/compteClient/_delete_form.html.twig') }}

            </div>


{% endblock %}

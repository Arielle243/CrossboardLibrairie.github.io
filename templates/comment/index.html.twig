{% extends 'base.html.twig' %}



{% set pseudo = app.user.pseudo %}

<div class="comment" id="c{{ comment.id }}">
    <div class="card">
        <div class="comment-content">
            <h5 class="card-title">
                <a class="text-decoration-none" href="{{ path('user', { 'pseudo': pseudo }) }}">
                    <span class="comment-author">{{ pseudo }}</span>
                </a>
            </h5>
            <small>{{ comment.createdAt|ago }}</small>
            {% include 'comment/_card_text.html.twig' with { 'action': 'show', 'content': comment.content } %}
        </div>
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="card-footer">
                {% include 'comment/_card_footer.html.twig' with { 'action': 'show', 'id': comment.id, 'isCommentAuthor': comment|isCommentAuthor } %}
            </div>
        {% endif %}
    </div>

    <div class="comment-answers">
        {% if item.answers is defined %}
            {% for answer in item.answers %}
                {% include 'comment/answer.html.twig' with { 'answer': answer } %}
            {% endfor %}
        {% endif %}
    </div>

</div>
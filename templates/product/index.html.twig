{% extends 'base.html.twig' %}


{% set product = entity %}

{% block title %}{{ product.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="product-title">{{ product.title }}</h1>
        <p>{{ product.illustration}}</p>
        <hr>

        <div class="product-content">
        
            <p>Format:{{ product.format}}</p>
            {{ product.excerpt|raw }}
            <p>Auteur(s):{{ product.author}}</p>
            <p>Prix:{{ product.price}} Euros</p>
        </div>

        <h2 class="comments-title mt-5"><span id="comment-count">{{ product.comments|length }}</span> commentaire(s)</h2>

        <hr>

        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="comment-area mb-5">
                {{ form(commentForm, { attr: { class: 'comment-form' } }) }}
            </div>
            <hr>
        {% endif %}

        <div class="comment-list mt-5" id="comments">
            <div class="d-flex justify-content-center">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>

    <div class="product-data d-none" data-id="{{ product.id }}" data-user-id="{{ app.user ? app.user.id : 0 }}"></div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('product') }}
    {{ encore_entry_script_tags('comment') }}
{% endblock %}